/判断\r\n                    if(result.body.code == 1){\r\n                        this.list=this.list.concat(result.body.msg);\r\n                    }else{\r\n                        Toast(\"服务器开小差了!!!\");\r\n                    }\r\n                })\r\n            },\r\n            getMore(){\r\n                this.pno++;\r\n                this.getProducts();\r\n            },\r\n            //获取商品的详细信息\r\n            goDetail(id){\r\n                console.log(id);\r\n                //注意:区分this.route 和this.router\r\n                //this.$route 参数对象,所有参数,params/query都属于它\r\n                //this.$router 导航对象\r\n                console.log(this);\r\n                //1.最简单的跳转\r\n                this.$router.push(\"/productInfo/\"+id)\r\n                //2.传递对象跳转\r\n                //this.$router.push({path:\"/productInfo/\"+id})\r\n                //3.方式三:需要在router.js中添加name\r\n                //this.$router.push({name:\"productInfo\",params:{id}})\r\n            }\r\n        },\r\n    }\r\n</script>\r\n<style>\r\n    .product-list{\r\n        display:flex;\r\n        flex-wrap:wrap;\r\n        padding:7px;\r\n        justify-content:space-between;\r\n    }\r\n    .product-list .product-item{\r\n        display:flex;\r\n        flex-direction:column;\r\n        justify-content:space-between;\r\n        min-height:293px;\r\n        width:49%;\r\n        border:1px solid #ccc;\r\n        box-shadow:0 0 8px #ccc;\r\n        margin:4px 0;\r\n        padding:2px;\r\n    }\r\n    .product-list .product-item img{\r\n        width:100%;\r\n    }\r\n    .product-list .product-item .title{\r\n        font-size:14px;\r\n    }\r\n    .product-list .product-item .info{\r\n        background-color:pink;\r\n    }\r\n    .product-list .product-item .info .price .now{\r\n        color:red;\r\n        font-size:16px;\r\n        font-weight:bold;\r\n    }\r\n    .product-list .product-item .info .price .old{\r\n        text-decoration:line-through;\r\n    }\r\n    .product-list .product-item .info .sell{\r\n        font-size:13px;\r\n        display:flex;\r\n        justify-content:space-between;\r\n    }\r\n</style>"]}]}